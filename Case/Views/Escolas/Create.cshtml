@model Case.Escola

<div class="modal-dialog" style="margin:auto;">
	<div class="modal-content">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()
			<div class="modal-header">
				<h4 class="modal-title">Adicionar Escola</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(model => model.nome_escola, htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.EditorFor(model => model.nome_escola, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Nome" } })
					@Html.ValidationMessageFor(model => model.nome_escola, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Pais, htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.EditorFor(model => model.Pais, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "País" } })
					@Html.ValidationMessageFor(model => model.Pais, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Estado" } })
					@Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Cidade" } })
					@Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Endereço" } })
					@Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="modal-footer">
				<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
				<input type="submit" class="btn btn-success" value="Criar">
			</div>
		}
	</div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}