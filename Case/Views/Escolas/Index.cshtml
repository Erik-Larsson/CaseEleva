				<li class="page-item"><a href="#" class="page-link">Next</a></li>
			</ul>
		</div>*@
	</div>
</div>
<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()
				<div class="modal-header">
					<h4 class="modal-title">Adicionar Escola</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="form-group">
						@Html.LabelFor(model => esc.nome_escola, htmlAttributes: new { @class = "control-label col-md-2" })
						@Html.EditorFor(model => esc.nome_escola, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => esc.nome_escola, "", new { @class = "text-danger" })
					</div>					
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-success" value="Create">
				</div>				
			}
		</div>
	</div>		
</div>
<!-- Edit Modal HTML -->
<div id='editModal' class='modal hide fade in' data-url='@Url.Action("Edit")'>
	<div id='editContainer'>
	</div>
</div>
<!-- Delete Modal HTML -->
<div id="deleteEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form>
				<div class="modal-header">
					<h4 class="modal-title">Excluir Escola</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">
					<p>Excluir escola selecionada?</p>
					<p class="text-warning"><small>Erro ao excluir.</small></p>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-danger" value="Delete">
				</div>
			</form>
		</div>
	</div>
</div>









<h2>Escolas</h2>

<p>
	@Html.ActionLink("Criar Escola", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.nome_escola)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>

			<td>
				@Html.ActionLink("Editar", "Edit", new { id = item.id_escola }) |
				@Html.ActionLink("Detalhes", "Details", new { id = item.id_escola }) |
				@Html.ActionLink("Excluir", "Delete", new { id = item.id_escola })
			</td>
		</tr>
	}

</table>
