@model Case.Escola


	<div class="modal-dialog" style="margin:auto;">
		<div class="modal-content">
			@using (Html.BeginForm())
			{
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(model => model.id_escola)
				<div class="modal-header">
					<h4 class="modal-title">Editar Escola</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				@Html.AntiForgeryToken()
				<div class="modal-body">
					<div class="form-group">
						@Html.LabelFor(model => model.nome_escola, htmlAttributes: new { @class = "control-label col-md-2" })
						@Html.EditorFor(model => model.nome_escola, new { htmlAttributes = new { @class = "form-control" }, required = "required", placeholder = "Nome" })
						@Html.ValidationMessageFor(model => model.nome_escola, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-info" value="Save">
				</div>
			}
		</div>
	</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval");

}
