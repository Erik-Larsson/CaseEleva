@model Case.Turma
<div class="modal-dialog" style="margin:auto;">
	<div class="modal-content">
		@using (Html.BeginForm())
		{
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.id_turma)
			<div class="modal-header">
				<h4 class="modal-title">Editar Turma</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			@Html.AntiForgeryToken()
			<div class="modal-body">
				<div class="form-group">

					@Html.LabelFor(model => model.id_escola, "Escola", htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.DropDownList("id_escola", null, htmlAttributes: new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.id_escola, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.nome_turma, htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.EditorFor(model => model.nome_turma, new { htmlAttributes = new { @class = "form-control" }, required = "required", placeholder = "Nome" })
					@Html.ValidationMessageFor(model => model.nome_turma, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Quantidade_Alunos, htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.EditorFor(model => model.Quantidade_Alunos, new { htmlAttributes = new { @class = "form-control" }, placeholder = "Quantidade de Alunos" })
					@Html.ValidationMessageFor(model => model.Quantidade_Alunos, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Quantidade_Professores, htmlAttributes: new { @class = "control-label col-md-2" })
					@Html.EditorFor(model => model.Quantidade_Professores, new { htmlAttributes = new { @class = "form-control" }, placeholder = "Quantidade de Professores" })
					@Html.ValidationMessageFor(model => model.nome_turma, "", new { @class = "text-danger" })
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
					<input type="submit" class="btn btn-info" value="Save">
				</div>
			</div>
		}
	</div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval");

}